<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dyn="http://www.rte-france.com/dynawo"
           targetNamespace="http://www.rte-france.com/dynawo"
           elementFormDefault="qualified">

  <xs:element name="finalStateInput">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="model" type="dyn:ModelInput" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element name="variable" type="dyn:VariableInput" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="ModelInput">
    <xs:sequence>
      <xs:element name="variable" type="dyn:VariableInput" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="model" type="dyn:ModelInput" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="id" use="required" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="VariableInput">
    <xs:attribute name="name" use="required" type="xs:string"/>
  </xs:complexType>

</xs:schema>
